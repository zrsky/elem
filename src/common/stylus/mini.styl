html,body,p,i,li
  padding:0
  margin:0
  list-style:normal
  font-style:normal
border-1px($color)
  position: relative
  &:after
    display: block
    position: absolute
    left: 0
    bottom: 0
    width: 100%
    border-top: 1px solid $color
    content: ' '

bg-image($url)
    background: url('images/' + $url + '@2x.png') no-repeat
    background-size: contain
    @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
      background: url('images/' + $url + '@3x.png') no-repeat
      background-size: contain


